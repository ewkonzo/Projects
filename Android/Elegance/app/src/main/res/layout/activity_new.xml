<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elegance.hasoft.com.elegance.New"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        >
    </include>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter The Name Of New Item"
                android:id="@+id/textView1"
                android:textColor="@color/theme"
                android:layout_alignParentLeft="true"
                style="@style/CodeFont"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/speccat"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="20"
                android:id="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:hint="Enter Name"
                android:textColorHint="@color/dark_gray"
                android:textColorHighlight="@color/black"
                android:background="@drawable/editview"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/CodeFont"
                android:textCursorDrawable="@null"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="30dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select The Category For This New Item"
                android:id="@+id/textView2"
                android:textColor="@color/theme"
                android:layout_alignParentLeft="true"
                style="@style/CodeFont"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/spectype"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:id="@+id/speccat"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:textColor="@color/blue"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />


            <floatt.FloatingActionButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_action_done"
                fab:fab_colorNormal="@color/orange"
                fab:fab_colorPressed="@color/primary_pressed"
                fab:fab_colorRipple="@color/ripple"
                android:layout_gravity="bottom|right"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
