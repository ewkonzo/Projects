<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elegance.hasoft.com.elegance.Add_Customer"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            >
        </include>
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/r"
                    android:background="@color/blue"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Add new customer"
                        android:id="@+id/textView"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:textSize="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Customer Name"
                    android:id="@+id/textViews"
                    android:textColor="@color/theme"
                    android:layout_alignParentLeft="true"
                    style="@style/CodeFont"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/r"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Enter Name"
                    android:textColorHint="@color/black"
                    android:textColorHighlight="@color/black"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textViews"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Enter Customer Email"
                    android:id="@+id/textq"
                    android:textColor="@color/theme"
                    android:layout_alignParentLeft="true"
                    style="@style/CodeFont"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/editprice"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editemail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Customer Email"
                    android:textColorHint="@color/black"
                    android:textColorHighlight="@color/black"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textq"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Enter Phone Number"
                    android:id="@+id/text"
                    android:textColor="@color/theme"
                    android:layout_alignParentLeft="true"
                    style="@style/CodeFont"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/specfab"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editphone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Enter Phone Number"
                    android:textColorHint="@color/black"
                    android:textColorHighlight="@color/black"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="30dp"
                    />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


    <floatt.FloatingActionButton
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_action_done"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>




