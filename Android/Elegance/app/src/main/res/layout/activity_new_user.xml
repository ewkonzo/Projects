<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elegance.hasoft.com.elegance.NewUser"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        >
    </include>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top"

                android:background="@color/theme"
                >




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Choose Photo"
                    android:id="@+id/textView"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                />

                <elegance.hasoft.com.elegance.RoundedImage
                    android:id="@+id/userimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/user"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView"
                    />
                <floatt.FloatingActionButton
                    android:id="@+id/photodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    fab:fab_colorNormal="@color/orange"
                    fab:fab_colorPressed="@color/primary_pressed"
                    fab:fab_colorRipple="@color/ripple"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/userimage"
                    />
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bot"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/top"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="* First Name"
                    android:id="@+id/textView2"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editfname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="First Name"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="30dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="* Last Name"
                    android:id="@+id/textsname"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/editfname"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editsname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Last Name"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textsname"
                    android:layout_marginTop="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="* Email"
                    android:id="@+id/textemail"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/editsname"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editemail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Email"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textemail"
                    android:layout_marginTop="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="* Phone"
                    android:id="@+id/textphone"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/editemail"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editphone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Phone Number"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CodeFont"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textphone"
                    android:layout_marginTop="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address Line"
                    android:id="@+id/textaddress"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/editphone"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/editaddress"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:hint="Address Line"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/editview"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textCursorDrawable="@null"
                    android:layout_below="@+id/textaddress"
                    android:layout_marginTop="30dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Assign A Group"
                    android:id="@+id/textgroup"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/editaddress"
                    />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textgroup"
                    android:id="@+id/specgroup"
                    android:layout_marginTop="10dp"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:textColor="@color/blue"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>

                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD USER"
                    android:id="@+id/adduser"
                    android:layout_below="@+id/bot"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:background="@color/theme"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
</FrameLayout>
