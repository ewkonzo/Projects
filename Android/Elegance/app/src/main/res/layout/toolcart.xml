<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme"
    android:elevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <floatt.FloatingActionButton
            android:id="@+id/viewcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:src="@android:drawable/ic_menu_info_details"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/primary_pressed"
            fab:fab_colorRipple="@color/ripple"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current cart has 23 itemshjvhjhvjfj"
            android:id="@+id/cartstatus"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/viewcart"
            android:layout_toLeftOf="@+id/clearcart"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total KShs 2344"
            android:id="@+id/carttotal"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/cartstatus"
            android:layout_toRightOf="@+id/viewcart"
            android:layout_toLeftOf="@+id/clearcart"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            />
        <floatt.FloatingActionButton
            android:id="@+id/clearcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/primary_pressed"
            fab:fab_colorRipple="@color/ripple"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>

</android.support.v7.widget.Toolbar>