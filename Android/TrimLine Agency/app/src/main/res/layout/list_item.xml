<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reference"
        android:hint="reference"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custname"
        android:layout_below="@+id/Reference"


        android:textSize="10dp"
        android:hint="Name"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/ttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_toLeftOf="@+id/status"
      android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textSize="10dp"
        android:hint="Transtype"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/samount"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
       android:layout_below="@+id/ttype"
        android:layout_alignRight="@id/ttype"
        android:layout_alignEnd="@id/ttype"
        android:gravity="end"
        android:textSize="10dp"
        android:hint="Amount"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/custname"
        android:hint="Status"
        android:gravity="right|center"
        android:layout_gravity="right"
        />

</RelativeLayout>