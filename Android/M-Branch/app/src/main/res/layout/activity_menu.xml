<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.example.paul.m_branch.menu">
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/printer"
    android:clickable="false"
    android:inputType="none"
    android:text="Printer"/>
    <Button
        android:id="@+id/Register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/register"
        android:text="Register" />

    <Button
        android:id="@+id/CashReceipt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/reciept"
        android:text="Cash receipts" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/report"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/CashReceipt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal"
            android:groupIndicator="@null" />




    </LinearLayout>

</LinearLayout>
