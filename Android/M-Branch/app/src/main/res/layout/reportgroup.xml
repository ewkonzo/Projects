<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/groupheadericon"
            android:src="@drawable/down"
            />
        <TextView
            android:id="@+id/lblListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Date"
            android:textColor="#000"
            android:layout_marginLeft="50dp"
      android:layout_marginTop="5dp"
            android:focusable="false"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/groupcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Total trans:" />

        <TextView
            android:id="@+id/groupcountvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/groupcount"
            android:layout_toRightOf="@id/groupcount"
            android:textColor="@android:color/holo_green_dark"
            android:hint="Count" />

        <TextView
            android:id="@+id/grouptotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/groupcount"
            android:layout_below="@id/groupcount"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="3dp"
            android:text="Total Coll.:" />

        <TextView
            android:id="@+id/grouptotalvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupcount"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/groupcount"
            android:layout_toRightOf="@id/groupcount"
            android:textColor="@android:color/holo_green_light"
            android:hint="total" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:src="@drawable/print" />

</RelativeLayout>