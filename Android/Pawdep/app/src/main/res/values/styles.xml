<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="tlist" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="editTextStyle">@style/tlisteditlist</item>
    </style>
    <style name="tlistheader" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/tlisth</item>
    </style>

    <style name="tranlabels" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <style name="tlisteditlist" parent="android:Widget.EditText">
        <!-- Customize your theme here. -->
        <item name="android:textSize">10dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="tlisth" parent="android:Widget.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textSize">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>


    </style>
    <dimen name="standard_55">55dp</dimen>
    <dimen name="standard_105">105dp</dimen>
    <dimen name="standard_155">155dp</dimen>
</resources>
