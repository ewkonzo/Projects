<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn1_menu"
        android:layout_width="200sp"
        android:layout_height="125sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/orange"
        android:clickable="false"
        android:text="测试菜单按键"
        android:textSize="30sp" />

    

    <Button
        android:id="@+id/btn3_back"
        android:layout_width="300sp"
        android:layout_height="125sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/lv_row_highlight_bg_blue"
        android:clickable="true"
        android:text="关闭程序"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/showmsg"
        android:layout_width="600sp"
        android:layout_height="240sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="40sp"
        android:text="@string/hello_world"
        android:textColor="#00000000">

    </TextView>

    <Button
        android:id="@+id/btn2_return"
        android:layout_width="200sp"
        android:layout_height="125sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/orange"
        android:clickable="false"
        android:text="测试返回按键"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn4_home"
        android:layout_width="200sp"
        android:layout_height="125sp"
        android:layout_above="@+id/btn1_menu"
        android:layout_marginBottom="50sp"
        android:layout_alignLeft="@+id/btn2_return"
        android:background="@color/orange"
        android:clickable="false"
        android:text="测试Home按键"
        android:textSize="30sp" />

</RelativeLayout>
