<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.realfullscreensample"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.CLOUDPOS_REAL_FULLSCREEN" />
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.realfullscreensample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.realfullscreensample.HideStatusActivity" />
        <activity android:name="com.example.realfullscreensample.HideNavActivity" />
        <activity android:name="com.example.realfullscreensample.FullScreenActivity" />
    </application>

</manifest>
