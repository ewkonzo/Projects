<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/farmerno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_below="@+id/farmername"
        android:hint="Transporter"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/farmername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        android:hint="Farmer Name"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/collectionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Kgcollected"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="120dp"
        android:layout_marginEnd="120dp"

        android:hint="Collection Number"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/Datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
       android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="right"
        android:hint="Date time"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/Kgcollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/collectionid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="120dp"
        android:layout_marginEnd="120dp"
        android:hint="Kg collected"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/Datetime"
        android:layout_below="@id/Datetime"
        android:layout_gravity="right"
        android:gravity="right|center"
        android:hint="Colleted by"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sent"
        android:layout_gravity="right"
        android:gravity="right|center"
        android:hint="status"
        android:src="@drawable/sent"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right|center"
        android:hint="Status"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>