<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paul.agency" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".agencyListActivity"
            android:label="@string/title_agency_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".agencyDetailActivity"
            android:label="@string/title_agency_detail"
            android:parentActivityName=".agencyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.paul.agency.agencyListActivity" />
        </activity>
        <activity
            android:name=".balance"
            android:label="@string/title_activity_balance" >
        </activity>
    </application>

</manifest>
