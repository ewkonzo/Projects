<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farmerno"
        android:hint="Farmer number"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farmername"
        android:layout_below="@+id/farmerno"


        android:textSize="10dp"
        android:hint="Farmer Name"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/collectionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_toLeftOf="@id/Kgcollected"
      android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textSize="10dp"
        android:hint="Collection Number"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Datetime"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
       android:layout_below="@+id/collectionid"
        android:layout_alignRight="@id/collectionid"
        android:layout_alignEnd="@id/collectionid"
        android:gravity="end"
        android:textSize="10dp"
        android:hint="Date time"
        android:layout_gravity="left"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Kgcollected"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:hint="Kg collected"
        android:gravity="right|center"
        android:layout_gravity="right"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_below="@id/Kgcollected"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:hint="status"
        android:src="@drawable/sent"
        android:gravity="right|center"
        android:layout_gravity="right"
        android:textSize="10dp"
        />
</RelativeLayout>